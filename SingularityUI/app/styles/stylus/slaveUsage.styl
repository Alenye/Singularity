#slave-usage-page
	margin-left : 25px

// SlaveAggregates
.avg-cpu
	width : 150px

.avg-memory
	width : 150px

.total-slaves #value, .total-tasks #value
	font-size : 70px
	text-align : center

.total-slaves #label, .total-tasks #label, .avg-cpu #label, .avg-memory #label
	font-size : 20px
	text-align : center

// SlaveHealth
.single-slave-btn
	padding : 15px 15px
	border-radius : 0px
	display : inline-block
	opacity : .8

.single-slave-btn:hover
	opacity : 1

.ok-slave, .ok-slave:hover
	background-color : $color-oz
	border-color : $color-oz-dark

.warning-slave, .warning-slave:hover
	background-color : $color-marigold
	border-color : $color-marigold-dark

.critical-slave, .critical-slave:hover
	background-color : $color-norman
	border-color : $color-norman-dark

// SlaveHealthMenuItems
.dropdown-menu
	border-radius : 0px

.stat-item-detail
	white-space : nowrap
	padding-left : 30px
	padding-right : 5px
	width : 350px

.stat-item-detail .row
	margin-bottom : .5em

#stat-name
	color : #666
	font-size : 13px
	display : inline

#stat-value
	display : inline

#stat-percentage
	display : inline

.warning-stat
	color : $color-marigold

.critical-stat
	color : $color-norman
